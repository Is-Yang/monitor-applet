
    <view class="user-info-container">
        <van-nav-bar title="我的信息" left-arrow="left-arrow" left-text="返回" fixed="fixed" custom-class="nav-reset"  bind:click-left="onClickLeft"/>
        <view class="operate-cell" style="padding-top: {{statusBarHeight}}px">
            <view class="cell">
                <view>
                    <image src="../assets/images/user.png" mode="aspectFit"/>
                    <text>昵称</text>
                </view>
                <input value="{{ nickname }}" bindinput="nicknameInput"/>
            </view>
            <view class="cell">
                <view>
                    <image src="../assets/images/phone.png" mode="aspectFit" class="icon-phone"/>
                    <text>手机号</text>
                </view>
                <input type="number" value="{{ phone }}" bindinput="phoneInput"/>
            </view>
        </view>
        <button class="complete" bindtap="completeEdit">完成</button>
    </view>