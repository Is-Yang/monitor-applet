.menu2-container .head-wrap {
  padding-bottom: 60rpx;
  position: relative;
  background-color: #FAF7FA;
}
.menu2-container .head-wrap .bg {
  width: 100%;
  height: 410rpx;
}
.menu2-container .head-wrap .my-box {
  position: absolute;
  top: 44px;
  left: 23rpx;
  right: 23rpx;
  z-index: 1;
  height: 326rpx;
  background-color: #ffffff;
  box-shadow: 0rpx 0rpx 11rpx 1rpx rgba(204, 204, 204, 0.2);
  border-radius: 6rpx;
  opacity: 0.9;
}
.menu2-container .head-wrap .user-info {
  display: flex;
  align-items: center;
  position: relative;
  padding: 40rpx;
  line-height: 38rpx;
  border-bottom: 1px solid rgba(56, 192, 153, 0.3);
  color: #333;
  box-sizing: border-box;
  font-size: 28rpx;
}
.menu2-container .head-wrap .user-info .photo {
  width: 118rpx;
  height: 118rpx;
  margin-right: 39rpx;
}
.menu2-container .head-wrap .user-info .photo image {
  border-radius: 50%;
  width: 100%;
  height: 100%;
}
.menu2-container .head-wrap .user-info .photo .camera {
  width: 75rpx;
  height: 62rpx;
  background-image: linear-gradient(#38c099, #38c099), linear-gradient(#f8f8fa, #f8f8fa);
  padding: 28rpx 23rpx;
}
.menu2-container .head-wrap .user-info:after {
  content: '\F00A';
  position: absolute;
  right: 40rpx;
  font-family: 'vant-icon';
  color: #ccc;
  font-size: 30rpx;
}
.menu2-container .head-wrap .mark {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 32rpx 50rpx 59rpx;
  font-size: 18rpx;
  color: #666;
  line-height: 38rpx;
  box-sizing: border-box;
}
.menu2-container .head-wrap .mark .company {
  color: #333333;
  font-size: 21rpx;
}
.menu2-container .head-wrap .mark .flag,
.menu2-container .head-wrap .mark .role {
  width: 105rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 25px;
  color: #fff;
  text-align: center;
}
.menu2-container .head-wrap .mark .flag {
  background-color: #52cc7a;
}
.menu2-container .head-wrap .mark .role {
  background-image: linear-gradient(0deg, #ff8800 0%, #ffcf21 100%), linear-gradient(#52cc7a, #52cc7a);
}
.menu2-container .head-wrap .mark .no {
  position: relative;
}
.menu2-container .head-wrap .mark .no::before {
  position: absolute;
  content: "<";
  left: -12rpx;
}
.menu2-container .head-wrap .mark .no::after {
  position: absolute;
  content: ">";
  right: -12rpx;
}
@media screen and (max-width: 320px) {
  .menu2-container .head-wrap {
    padding-bottom: 80rpx;
  }
}
.menu2-container .operate-cell .cell {
  position: relative;
  color: #333;
  padding: 28rpx 32rpx;
  border-bottom: 1px solid #f7f7f7;
  font-size: 26rpx;
}
.menu2-container .operate-cell .cell image {
  width: 34rpx;
  height: 34rpx;
  vertical-align: middle;
  margin-right: 30rpx;
}
.menu2-container .operate-cell .cell:after {
  content: '\F00A';
  position: absolute;
  top: 50%;
  right: 32rpx;
  transform: translateY(-50%);
  font-family: 'vant-icon';
  color: #ccc;
  font-size: 30rpx;
}
.menu2-container .operate-cell .cell:active {
  background-color: #f2f3f5;
}
.menu2-container .logout {
  margin: 62rpx auto 0;
  width: 335rpx;
  height: 76rpx;
  line-height: 76rpx;
  background-image: linear-gradient(0deg, #38c099 0%, #59c89a 50%, #cfe49d 100%), linear-gradient(#e6e6e6, #e6e6e6);
  color: #fff;
  border-radius: 38rpx;
  font-size: 28rpx;
}
.menu2-container .van-nav-bar {
  background-image: none;
}
.menu2-container .van-hairline--bottom:after {
  border: none;
}
