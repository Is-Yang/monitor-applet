.menu1-container .nav-reset.van-nav-bar {
  background-image: linear-gradient(0deg, #38c099 0%, #009788 100%), linear-gradient(#ededed, #ededed);
}
.menu1-container .nav-reset .van-nav-bar__left {
  padding: 10rpx 15rpx 10rpx 20rpx;
  border-radius: 25px;
  border: solid 1rpx #ffffff;
  background-color: transparent;
  color: #fff;
  line-height: 1.2;
  font-size: 24rpx;
  bottom: 10px;
}
.menu1-container .nav-reset .van-nav-bar__left::after {
  content: "\F00A";
  display: inline-block;
  font-family: 'vant-icon';
  font-size: 25rpx;
  padding-left: 5rpx;
  vertical-align: middle;
}
.menu1-container .nav-reset .van-nav-bar__left:active {
  opacity: 0.8;
}
.menu1-container .screen-page-wrap {
  position: fixed;
  top: 44px;
  z-index: 1;
  width: 100%;
  height: 85rpx;
  background-color: #FAF7FA;
}
.menu1-container .screen-page-wrap .box-view {
  padding: 20rpx 15rpx;
  background-color: #fff;
  font-size: 25rpx;
  color: #333;
  box-sizing: border-box;
  position: relative;
}
.menu1-container .screen-page-wrap .box-view .screen-info {
  display: flex;
  align-items: center;
}
.menu1-container .screen-page-wrap .box-view .screen-info .opt {
  padding: 0 10rpx;
}
.menu1-container .screen-page-wrap .box-view .page-info {
  text-align: right;
}
.menu1-container .screen-page-wrap .box-view .page-info .split {
  color: #ccc;
  padding: 0 10rpx;
}
.menu1-container .screen-page-wrap .box-view .screen-time {
  position: absolute;
  top: 75rpx;
  background-color: #4c4c4c;
  border-radius: 6rpx;
  z-index: 9;
}
.menu1-container .screen-page-wrap .box-view .screen-time .opt {
  color: #fff;
  letter-spacing: 2rpx;
  font-size: 26rpx;
  padding: 23rpx 30rpx;
  border-bottom: 1px solid #545454;
}
.menu1-container .screen-page-wrap .box-view .screen-time .opt:last-child {
  border-bottom: none;
}
.menu1-container .screen-page-wrap .box-view .screen-time:before {
  content: "";
  position: absolute;
  display: block;
  top: -10rpx;
  left: 75rpx;
  z-index: 11;
  width: 25rpx;
  height: 25rpx;
  transform: rotate(45deg);
  background-color: #4c4c4c;
}
.menu1-container .screen-page-wrap .time-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 15rpx;
}
.menu1-container .screen-page-wrap .time-info .icon {
  width: 50rpx;
  height: 50rpx;
}
.menu1-container .screen-page-wrap.time-h {
  height: 130rpx;
}
.menu1-container .list-wrap {
  padding-top: 85rpx;
}
.menu1-container .list-wrap.top-h {
  padding-top: 130rpx;
}
.menu1-container .list-wrap .item {
  display: flex;
  padding: 30rpx 20rpx 30rpx 30rpx;
  border-bottom: 1px solid #e5e5e5;
  font-size: 28rpx;
  color: #333333;
}
.menu1-container .list-wrap .item .content {
  display: flex;
  flex: 1;
}
.menu1-container .list-wrap .item .content .full {
  flex: 1;
}
.menu1-container .list-wrap .item .content .picture {
  width: 120rpx;
  height: 120rpx;
  margin-right: 23rpx;
  background-color: #eee;
}
.menu1-container .list-wrap .item .content .title {
  margin-bottom: 10rpx;
  line-height: 32rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.menu1-container .list-wrap .item .content .desc {
  font-size: 24rpx;
  margin-bottom: 10rpx;
  line-height: 28rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.menu1-container .list-wrap .item .content .time {
  font-size: 24rpx;
  color: #999;
}
.menu1-container .list-wrap .item .user-info {
  text-align: right;
  margin-left: 50rpx;
}
.menu1-container .list-wrap .item .user-info .name {
  margin-bottom: 8rpx;
}
.menu1-container .list-wrap .item .user-info .state {
  display: inline-block;
  padding: 8rpx 20rpx;
  background-image: linear-gradient(#999999, #999999), linear-gradient(#52cc7a, #52cc7a);
  border-radius: 25px;
  color: #fff;
  font-size: 24rpx;
}
.menu1-container .list-wrap .item.not {
  background-color: #ffffcc;
}
.menu1-container .list-wrap .item.not .state {
  background-image: linear-gradient(0deg, #38c099 0%, #009788 100%), linear-gradient(#52cc7a, #52cc7a);
}
.menu1-container .flex-between {
  display: flex;
  justify-content: space-between;
}
.menu1-container .date-wrap {
  display: flex;
  margin-top: 35rpx;
  justify-content: center;
}
.menu1-container .date-wrap .first,
.menu1-container .date-wrap .last {
  width: 220rpx;
  text-align: center;
  color: #666;
}
