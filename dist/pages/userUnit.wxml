
    <view class="user-unit-container">
        <van-nav-bar title="我的单位" left-arrow="left-arrow" left-text="返回" fixed="fixed" custom-class="nav-reset"  bind:click-left="onClickLeft"/>
        <view class="head-wrap" style="height: {{statusBarHeight == 44 ? '360rpx' : '320rpx'}}">
            <image src="../assets/images/my_bg.png" class="bg" style="height: {{statusBarHeight == 44 ? '324rpx' : '280rpx'}}"/>
            <view class="user-wrap">
                <view class="mark">
                    <view>{{userInfo.dept}}</view>
                    <view  wx:if="{{userInfo.firstRoleName}}" class="flag">{{userInfo.firstRoleName}}</view>
                </view>
                <image src="{{userInfo.avatar}}" mode="aspectFill"/>
            </view>
        </view>
        <view style="padding-top: {{statusBarHeight == 44 ? '360rpx' : '320rpx'}}"/>
        <view class="panel-wrap">
            <view class="title">用户列表</view>
            <van-collapse value="{{ activeNames }}" bindchange="onChangeColl">
                <block  wx:for="{{userList}}" wx:key="index" wx:index="index" wx:for-item="item">
                    <van-collapse-item name="{{index}}">
                        <view slot="title">
                            <image src="../assets/images/user.png" mode="aspectFit" class="icon"/>
                            <text class="nickname">{{ item.nickname}}</text>
                            <text class="tel">{{ item.phone }}</text>
                        </view>
                        <view slot="value">
                            <text class="num">监测点{{item.num}}/{{item.total}}</text>
                        </view>
                        <view class="operate-cell">
                            <view class="cell">
                                <view>
                                    <image src="../assets/images/phone.png" mode="aspectFit"/>
                                    <text>手机号</text>
                                </view>
                                <text class="right-txt">{{ item.phone }}</text>
                            </view>
                            <view class="cell link">
                                <view>
                                    <image src="../assets/images/role.png" mode="aspectFit"/>
                                    <text>角色</text>
                                </view>
                                <text class="right-txt">{{ item.role }}</text>
                            </view>
                            <block wx:for="{{ item.site }}" wx:key="i" wx:index="i" wx:for-item="site">
                                <view class="cell">
                                    <view>
                                        <image src="../assets/images/location.png" mode="aspectFit"/>
                                        <text>{{site.name}}</text>
                                    </view>
                                    <switch wx:if="{{isOper}}" checked="{{ site.check == 0 ? false : true }}" data-site="{{site}}" bindchange="onChangeSite"/>
                                </view>
                            </block>
                        </view>
                    </van-collapse-item>
                </block>
            </van-collapse>
            <view wx:if="{{userPage.total > userList.length}}" class="more" bindtap="getMoreUserList"><van-icon name="arrow-down"/></view>
        </view>
        <view wx:if="{{userInfo.firstDept}}" class="panel-wrap">
            <view class="title">上级单位</view>
            <view class="operate-cell">
                <view class="cell">
                    <view>
                        <image src="../assets/images/write.png" mode="aspectFit"/>
                        <text>{{userInfo.firstDept}}</text>
                    </view>
                </view>
            </view>
        </view>
        <view class="panel-wrap">
            <view class="title">监测点</view>
            <view class="operate-cell">
                <block wx:for="{{deviceList}}" wx:key="index" wx:index="index" wx:for-item="item">
                    <view class="cell link">
                        <view>
                            <image src="../assets/images/location.png" mode="aspectFit"/>
                            <text>{{item.deviceName}}</text>
                        </view>
                        <view class="right-txt font21">
                            <view>{{item.deptName}}</view>
                            <view>负责人：{{item.person}}</view>
                        </view>
                    </view>
                 </block>
            </view>
        </view>
    </view>