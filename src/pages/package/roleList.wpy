    .role-list {
        margin-bottom: 80rpx;
        .item {
            display: block;
            padding: 20rpx 30rpx;
            border-bottom: 1px solid #eee;
            .name {
                padding-left: 15rpx;
            }
        }
    }
    .btn-bottom {
        position: fixed;
        bottom: 0;
        width: 100%;
        height: 76rpx;
        line-height: 76rpx;
        background-image: linear-gradient(0deg, #009788 0%, #38c099 100%), linear-gradient( #e6e6e6, #e6e6e6);
        color: #fff;
