<template>
    <view class="menu2-container">
        <van-nav-bar title="我的" fixed custom-class="nav-reset" />
        <view class="head-wrap">
            <image src="../assets/images/my_bg.png" class="bg" style="height: {{statusBarHeight == 44 ? '454rpx' : '410rpx'}}" />
            <view class="my-box" style="margin-top: {{statusBarHeight}}px">
                <view class="user-info" bindtap="toUserInfo">
                    <view class="photo" catchtap="uploadPhoto">
                        <image wx:if="{{userInfo.avatar != '' }}" src="{{userInfo.avatar}}" mode="aspectFill" />
                        <image wx:else src="../assets/images/camera_w.png" class="camera" />
                    </view>
                    <view>
                        <view>{{userInfo.nickName}}</view>
                        <view>{{userInfo.phone}}</view>
                    </view>
                </view>
                <view class="mark" bindtap="toUserUnit">
                    <text wx:if="{{userInfo.company}}" class="company">{{userInfo.company}}</text>
                    <text wx:else class="no">未加入任何单位</text>
                    <view>
                        <text wx:if="{{!userInfo.company}}" class="flag" catchtap="scanJoin">扫码加入</text>
                        <text wx:if="{{userInfo.firstRoleName != ''}}" class="role">{{userInfo.firstRoleName}}</text>
                    </view>
                </view>
            </view>
        </view>
        <view class="operate-cell">
            <view class="cell" @tap="toLogs">
                <image src="../assets/images/option.png" mode="aspectFit" />
                <text>操作记录</text>
            </view>
            <view class="cell">
                <image src="../assets/images/location.png" mode="aspectFit" />
                <text>监测点</text>
            </view>
            <view class="cell" @tap="toSetting">
                <image src="../assets/images/location.png" mode="aspectFit" />
                <text>设置</text>
            </view>
        </view>
        <button class="logout" @tap="logoutHandle">退出登录</button>
    </view>
</template>

<script>
    import wepy from 'wepy'
    import * as api from '../api/api'
    export default class Menu2 extends wepy.page {
        config = {
            navigationBarTitleText: '我的',
            usingComponents: {
                "van-nav-bar": "../components/vant/nav-bar/index"
            }
        }
        data = {
            statusBarHeight: wepy.$instance.globalData.statusBarHeight,
            userInfo: {
                avatar: '',
                company: '',
                firstRoleName: '',
                tel: '',
                nickname: ''
            }
        }
        onShow() {
            this.getUserInfo();
        }
        methods = {
            // 扫码加入
            scanJoin() {
                wx.scanCode({
                    success: (res) => {
                        let result = res.result;
                        let qrCode = res.result.split('?qrcode=')[1];
                        if (qrCode) {
                            this.bindDept(qrCode);
                        } else {
                            wx.showToast({
                                title: '请扫码有效的二维码',
                                icon: 'none',
                                duration: 1500
                            })
                        }
                    }
                })
            },
            toUserInfo() {
                wx.navigateTo({
                    url: `/pages/userInfo?nickname=${this.userInfo.nickName}&tel=${this.userInfo.tel}&userId=${this.userInfo.userId}`
                })
            },
            toUserUnit() {
                if (!this.userInfo.company) {
                    return;
                }
                wx.navigateTo({
                    url: '/pages/userUnit'
                })
            },
            toSetting() {
                wx.navigateTo({
                    url: '/pages/setting'
                })
            },
            toLogs() {
                wx.navigateTo({
                    url: '/pages/logs'
                })
            },
            // 上传头像
            uploadPhoto() {
                let that = this;
                let token = wx.getStorageSync('token');
                let link = '';
                if (wepy.$instance.globalData.env == 'prod') {
                    link = 'https://tcb-api.tencentcloudapi.com';
                } else {
                    link = 'https://beidou.signalfire.net.cn';
                }
                wx.chooseImage({
                    count: 1, // 默认1张
                    sizeType: ['original', 'compressed'], // 可以指定是原图还是压缩图，默认二者都有
                    sourceType: ['album', 'camera'], // 可以指定来源是相册还是相机，默认二者都有
                    success: function(res) {
                        let tempFilePaths = res.tempFilePaths
                        wx.uploadFile({
                            url: link + '/system/user/profile/avatar',
                            filePath: tempFilePaths[0],
                            name: "avatarfile",
                            header: {
                                "Content-Type": "multipart/form-data",
                                "Authorization": token
                            },
                            formData: {},
                            success: function(res) {
                                that.userInfo.avatar = tempFilePaths[0];
                                that.$apply();
                            }
                        });
                    }
                })
            },
            // 退出登录
            logoutHandle() {
                this.userLogout();
            }
        }
        async bindDept(params) {
            let res = await api.bindDept(params);
            if (res.code == 200) {
                this.getUserInfo();
                wx.showToast({
                    title: res.msg,
                    icon: 'success',
                    duration: 1000
                })
            }
        }
        async userLogout() {
            let res = await api.userLogout();
            if (res.code == 200) {
                wx.removeStorageSync('token')
                wx.showToast({
                    title: res.msg,
                    icon: 'success',
                    duration: 1000
                })
                setTimeout(() => {
                    wx.navigateTo({
                        url: '/pages/login'
                    })
                }, 1000)
            }
        }
        async getUserInfo() {
            let res = await api.getUserInfo();
            if (res.code == 200) {
                const {
                    avatar,
                    nickName,
                    phonenumber,
                    sex,
                    firstRoleName,
                    userName,
                    dept,
                    userId
                } = res.user;
                let phone = phonenumber.replace(phonenumber.substring(3, 7), "****")
                this.userInfo = {
                    avatar, // 头像
                    nickName, // 昵称
                    sex, // 性别
                    userName, // 用户名
                    firstRoleName,
                    phone, // 手机号
                    userId,
                    company: dept && dept.deptName, // 扫码加入后的公司名称
                    tel: phonenumber
                }
                this.$apply();
            }
        }
    }
</script>

